{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/no-unescaped-entities": "off",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@/lib/reviews/image-upload"],
            "message": "Use @/lib/reviews/image-upload-client for client components"
          }
        ]
      }
    ]
  }
}
